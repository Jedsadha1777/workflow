# =============================================================================
# FAQ Bot Configuration
# =============================================================================
# Copy this file to .env and edit values

# OpenAI (optional - Layer 1 ยังทำงานได้โดยไม่ต้องมี)
OPENAI_API_KEY=sk-
MODEL=gpt-4o-mini

# Redis (ใช้ค่านี้สำหรับ Docker)
REDIS_URL=redis://faqbot-redis:6379/0

# Knowledge Base
KNOWLEDGE_FILE=/data/knowledge/knowledge.json

# Rate Limits
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_DAY=100

# Input Validation
MAX_QUESTION_LENGTH=200
MAX_EMOJI_COUNT=3

# Search Settings
SIMILARITY_THRESHOLD=0.5
MAX_SEARCH_RESULTS=3

# LLM Settings
LLM_TIMEOUT=30
MAX_TOKENS=500

# Cache (seconds)
LLM_CACHE_TTL=3600

# Daily Budget (USD) - LLM จะ fallback เป็น KB เมื่อเกิน
DAILY_BUDGET_USD=10.0

# Server
PORT=8000
